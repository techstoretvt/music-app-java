<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.fragment_chi_tiet_bh.ThongTinBaiHatFragment">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgNhac"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/anh_header"
        android:layout_gravity="center"
        app:civ_border_width="2dp"
        android:layout_marginTop="30dp"
        app:civ_border_color="#FF000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnShare"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_ios_share_white"/>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTenBH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sao trời lám gió Sao trời lám gió Sao trời lám gió Sao trời lám gió"
                android:textColor="#fff"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/txtTenCS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nal, CT"
                android:layout_marginTop="6dp"
                android:textColor="#ccc"
                android:textSize="12dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnThaTim"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:outlineSpotShadowColor="#fff"
            android:src="@drawable/baseline_favorite_24"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtLoiBH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="\nLoi bai hat\n loi bai
                hat\nLoi bai hat\n loi bai hat\nLoi bai hat\n
                loi bai hat\nLoi bai hat\n loi bai hat\nLoi bai hat\n loi bai hat\nLoi bai hat\n loi bai hat\nLoi bai hat\n loi bai hat\nLoi bai hat\n
                loi bai hat\nLoi bai hat\n loi bai hat"
            android:textColor="#fff"/>
    </ScrollView>

</LinearLayout>