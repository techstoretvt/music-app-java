<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".fragments.NoiBatFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        app:liftOnScroll="true"
        android:background="@color/primary_color"
        android:layout_height="50dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:title="NỔI BẬT"
            app:menu="@menu/top_app_bar"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--    slider 1-->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="250dp"
                            android:layout_height="300dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/anh_ds_rong"/>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="250dp"
                            android:layout_height="300dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cat_doi_noi_sau"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="250dp"
                            android:layout_height="300dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/nam_thang_ben_em"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </HorizontalScrollView>

            <!--    co the ban muon nghe-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có thể bạn muốn nghe"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvCoTheBanMuonNghe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--    Nhạc hót gây bão -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhạc hót gây bão"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvNhacHotGayBao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--    Remix Hot Nhất -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remix Hot Nhất"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvRemixHotNhat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--    Chill -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chill"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvChill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--    Nghệ sĩ thịnh hành -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nghệ sĩ thịnh hành"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvNgheSiThinhHanh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--    Nghe là yêu đời -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nghe là yêu đời"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvNgheLaYeuDoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--    Nhạc buồn tâm trạng -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhạc buồn tâm trạng"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvNhacBuonTamTrang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--    Top 100 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top 100"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvTop100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <!--    Album hot -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Album hot"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvAlbumHot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!--    Radio nổi bật -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radio nổi bật"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:textSize="18sp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="200dp">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/anh_cop"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:layout_marginHorizontal="10dp"
                            android:layout_gravity="center_horizontal"
                            android:text="HOMEWORK VIBE"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="200dp">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/anh_tho"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:layout_marginHorizontal="10dp"
                            android:layout_gravity="center_horizontal"
                            android:text="Nhạc Việt theo yêu cầu"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="200dp">

                            <ImageView
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/anh_cho"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginHorizontal="10dp"
                            android:text="U là trời"/>

                    </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>