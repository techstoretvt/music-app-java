<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.fragment_chi_tiet_bh.ThongTinBaiHatFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingHorizontal="10dp"
                    android:paddingVertical="30dp"
                    android:background="#111"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/anhBaiHat"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/anh_chuot"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tenBaiHat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ten bai hat"
                                android:textColor="#fff"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tenCaSi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ten ca si"
                                android:textSize="12sp"
                                android:textColor="#ccc"
                                android:textStyle="bold"/>


                        </LinearLayout>

                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="100dp"
                            android:text="Thể loại"
                            android:textColor="#ccc"/>

                        <TextView
                            android:id="@+id/theLoai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Viet nam,v-pop"
                            android:layout_marginLeft="10dp"
                            android:textColor="#fff"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="100dp"
                            android:text="Phát hành"
                            android:textColor="#ccc"/>

                        <TextView
                            android:id="@+id/phatHanh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20/9/2023"
                            android:layout_marginLeft="10dp"
                            android:textColor="#fff"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="100dp"
                            android:text="Cung cấp"
                            android:textColor="#ccc"/>

                        <TextView
                            android:id="@+id/cungCap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Youtube"
                            android:layout_marginLeft="10dp"
                            android:textColor="#fff"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phát tiếp theo"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>


    </ScrollView>


</LinearLayout>