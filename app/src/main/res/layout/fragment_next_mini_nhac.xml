<?xml version="1.0" encoding="utf-8"?>
<LinearLayout tools:context=".fragments.fragment_mini_nhac.CurrentMiniNhacFragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgNhac"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/anh_header"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <LinearLayout
        android:id="@+id/layoutTencasi"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tenBaiHat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bai 2"
            android:textColor="#fff"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/tenCaSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Son Tung MTP"
            android:textColor="#ccc"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:singleLine="true"/>
    </LinearLayout>

</LinearLayout>