<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutChitietbaihat"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#000"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".activities.ChiTietNhacActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iconClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_keyboard_arrow_left_white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nghe nhạc"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txtTypePlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Khám phá"
                android:textColor="#ccc"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_more_vert_24"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgNhac"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:src="@drawable/anh_header"
        android:layout_gravity="center"
        app:civ_border_width="2dp"
        android:layout_marginTop="30dp"
        app:civ_border_color="#FF000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_keyboard_arrow_down_24"/>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTenBH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sao trời lám gió Sao trời lám gió Sao trời lám gió Sao trời lám gió"
                android:textColor="#fff"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/txtTenCS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nal, CT"
                android:layout_marginTop="6dp"
                android:textColor="#ccc"
                android:textSize="12dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:outlineSpotShadowColor="#fff"
            android:src="@drawable/baseline_favorite_24"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtLoiBH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="\nLoi bai hat\n loi bai
            hat\nLoi bai hat\n loi bai hat\nLoi bai hat\n
            loi bai hat\nLoi bai hat\n loi bai hat\nLoi bai hat\n loi bai hat\nLoi bai hat\n loi bai hat\nLoi bai hat\n loi bai hat\nLoi bai hat\n
            loi bai hat\nLoi bai hat\n loi bai hat"
            android:textColor="#fff"/>
    </ScrollView>


    <com.google.android.material.slider.Slider
        android:id="@+id/sliderProgress"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:valueFrom="0.0"
        android:valueTo="5.23"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tgHienTai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:03"
            android:layout_gravity="start"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/totalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:23"
            android:layout_gravity="end"
            android:textColor="#fff"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnRandom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/random"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnPrev"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_skip_previous_white"/>

            <ImageView
                android:id="@+id/btnPausePlay"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/baseline_pause_white"/>

            <ImageView
                android:id="@+id/btnNext"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_skip_next_white"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/btnLoop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrows_rotate_solid"/>
    </LinearLayout>

</LinearLayout>